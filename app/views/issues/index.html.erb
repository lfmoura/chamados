<h1>Listing issues</h1>

<table>
  <tr>
    <th>Project</th>
    <th>Subject</th>
    <th>Opener user</th>
    <th>Assignee user</th>
    <th>Status</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @issues.each do |issue| %>
  <tr>
    <td><%= issue.project.name rescue "-" %></td>
    <td><%= issue.subject %></td>
    <td><%= issue.opener_user.email rescue "-" %></td>
    <td><%= issue.assignee_user.email rescue "-" %></td>
    <td><%= issue.status.name rescue "-" %></td>
    <td><%= link_to 'Show', issue %></td>
    <td><%= link_to 'Edit', edit_issue_path(issue) %></td>
    <td><%= link_to 'Destroy', issue, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Issue', new_issue_path %>
